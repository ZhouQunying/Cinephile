extend ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影名字
						th 录入时间
						th 查看
						th 更新
						th 更新时间
						th 删除
				tbody
					each item in movie
						tr(class="item-id-#{item._id}")
							td #{item.title}
							td #{moment(item.meta.createAt).format('MM/DD/YYYY')}
							td: a(target="_blank", href="/detail/#{item._id}") 查看
							td: a(target="_blank", href="/admin/update/#{item._id}") 修改
							td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
							td
								button.btn.btn-dander.del(type="button", data-id="#{item._id}") 删除
block script
	script(src="/libs/moment/min/moment.min.js")
	script(src="/script/delete.js")
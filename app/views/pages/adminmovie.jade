extend ../layout

block content
    .container
        .row
            form.form-horizontal(method="post", action="/admin/movie/new")
                input(type="hidden", name="_id", value="#{movie._id}")
                .form.group
                    label.col-sm-3.control-label 电影名字
                    .col-sm-9
                        input.form-control(type="text", name="title", value="#{movie.title}")
                    label.col-sm-3.control-label 简介
                    .col-sm-9
                        input.form-control(type="text", name="summary", value="#{movie.summary}")
                    .col-sm-3
                        input.form-control.button(type="submit", value="录入")